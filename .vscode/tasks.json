{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "maybeOne",
      "type": "pickString",
      "description": "Run with extra CLI arg '1'?",
      "options": ["", "1"],
      "default": ""
    }
  ],
  "tasks": [
    {
      "label": "C++ (asan): build & run active file (optional 1)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "set -euo pipefail; out=\"./${fileBasenameNoExtension}\"; clang++ -std=c++23 \"${file}\" -fsanitize=address -g -o \"$out\" && \"$out\" ${input:maybeOne}"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"],
      "presentation": { "reveal": "always", "panel": "shared", "clear": true }
    }
  ]
}
